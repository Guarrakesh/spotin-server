{
  "name": "express-rest-es2017-boilerplate",
  "version": "1.2.2",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Daniel Sousa <sousa.dfs@gmail.com>",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "staging": "cross-env NODE_ENV=staging pm2 start ./src/index",
    "server": "nodemon ./src/index.js",
    "client": "cd client && yarn start",
    "admin": "cd admin && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn admin\"",
    "heroku": "node ./src/index.js",
    "heroku-postbuild": "cd admin && yarn && yarn run build",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:danielfsousa/express-rest-es2017-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "passport",
    "es6",
    "es7",
    "es8",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "Travis CI",
    "coveralls",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "@google/maps": "^0.5.5",
    "aws-sdk": "^2.284.1",
    "axios": "^0.18.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "concurrently": "^3.6.1",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "del": "^3.0.0",
    "dotenv-safe": "^6.0.0",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "geolib": "^2.0.24",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "image-size": "^0.6.3",
    "inflection": "^1.12.0",
    "joi": "^10.4.1",
    "jwt-simple": "0.5.1",
    "lodash": "^4.17.4",
    "lodash-addons": "^2.0.1",
    "method-override": "^2.3.8",
    "mime-to-extensions": "^1.0.2",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.13",
    "mongoose": "*",
    "mongoose-deep-populate": "^3.1.1",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.8.1",
    "multer": "^1.3.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pm2": "^2.4.6",
    "prop-types": "^15.6.2",
    "react-bootstrap-sweetalert": "^4.4.1",
    "react-redux": "^5.0.7",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "request-promise": "^4.2.2",
    "sharp": "^0.20.8",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  }
}
